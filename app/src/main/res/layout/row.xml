<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:background="#ffffffff" android:padding="10dp"
                android:layout_marginTop="10dp" android:layout_marginBottom="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/wrap_img" android:paddingLeft="5dp"
            android:paddingTop="5dp" android:paddingBottom="5dp" android:paddingRight="20dp">
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/wrap_img">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Профессия" android:textSize="20sp" android:id="@+id/profession"
                  android:textAllCaps="true"
                  android:textColor="#4A4A4A"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp">
            <TextView
                    android:text="Зарплата"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_weight="1"
                    android:layout_margin="2dp" android:textSize="18sp" android:textColor="#4A4A4A"/>
            <TextView
                    android:text="13000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wageCount" android:layout_weight="1"
                    android:layout_margin="2dp" android:textSize="18sp" android:textColor="#4A4A4A"/>
            <TextView
                    android:text="руб."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/wageType" android:layout_weight="1"
                    android:layout_margin="2dp" android:textSize="18sp" android:textColor="#4A4A4A"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Образование"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_weight="1"
                    android:textSize="16sp" android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:textColor="#4A4A4A"/>
            <TextView
                    android:text="высшее"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/education" android:layout_weight="1"
                    android:textSize="16sp" android:layout_marginTop="4dp" android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" android:textColor="#4A4A4A"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Опыт работы"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="#4A4A4A"/>
            <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/experience" android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="#4A4A4A"/>
            <TextView
                    android:text="год"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/experienceType" android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textColor="#4A4A4A"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>