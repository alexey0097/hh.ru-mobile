<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="20dp" android:background="#ffffffff">
            <TextView
                    android:text="ООО РОГА И КОПЫТА"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textAllCaps="true"
                    android:textSize="24sp" android:textColor="#4A4A4A" android:textStyle="bold"
                    android:id="@+id/nameCompany"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/myphoto" android:id="@+id/img"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_toRightOf="@+id/img"
                        android:paddingLeft="20dp"
                >

                    <TextView
                            android:text="профессия"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/profession" android:textSize="20sp"
                            android:textColor="#4A4A4A" android:textStyle="bold" android:textAllCaps="true"/>
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="з/п:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView7"
                                android:textColor="#4a4a4a" android:textSize="18sp" android:layout_marginRight="10dp"/>
                        <TextView
                                android:text="30000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/wageCount"
                                android:layout_weight="1" android:textColor="#4a4a4a" android:textSize="18sp"
                                android:layout_toRightOf="@+id/textView7"/>
                        <TextView
                                android:text="руб."
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/wageType"
                                android:layout_weight="1" android:layout_toRightOf="@+id/wageCount"
                                android:layout_marginLeft="10dp" android:textColor="#4a4a4a" android:textSize="18sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="образование:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView3"
                                android:layout_weight="1"
                                android:textColor="#4A4A4A" android:textSize="16sp"/>
                        <TextView
                                android:text="среднее"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/education"
                                android:layout_weight="1"
                                android:textColor="#4A4A4A" android:textSize="16sp"
                                android:layout_toRightOf="@+id/textView3"
                                android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="опыт работы:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView5"
                                android:layout_weight="1"
                                android:textColor="#4A4A4A" android:textSize="16sp"/>
                        <TextView
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/experience"
                                android:layout_weight="1"
                                android:textAlignment="center" android:textColor="#4A4A4A" android:textSize="16sp"
                                android:layout_toRightOf="@+id/textView5" android:layout_marginLeft="10dp"/>
                        <TextView
                                android:text="Год"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/experienceType"
                                android:layout_weight="1"
                                android:textSize="16sp" android:textColor="#4A4A4A"
                                android:layout_toRightOf="@+id/experience"
                                android:layout_marginLeft="10dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:text="график:"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView9"
                                android:textColor="#4a4a4a" android:textSize="16sp" android:layout_marginRight="10dp"/>
                        <TextView
                                android:text="полный день"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/graphicWork"
                                android:layout_toRightOf="@+id/textView9" android:textColor="#4a4a4a"
                                android:textSize="16sp"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <TextView
                        android:text="О компании:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView10" android:textColor="#4A4A4A"
                        android:textSize="18sp" android:textStyle="bold"/>
                <TextView
                        android:text="Тут будет немного необходимой информации о нашей компании."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutCompany" android:textSize="18sp"
                        android:textColor="#4A4A4A"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <TextView
                        android:text="Обязанности:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView13" android:textColor="#4a4a4a"
                        android:textStyle="bold" android:textSize="18sp"/>
                <TextView
                        android:text="Тут немного информации о требуемых учебных заведениях, в которых обучался"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutObyas"
                        android:textColor="#4A4A4A"
                        android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <TextView
                        android:text="Требования:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView14" android:textColor="#4a4a4a"
                        android:textStyle="bold" android:textSize="18sp"/>
                <TextView
                        android:text="Тут немного информации о требуемом опыте работы."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutTrebov" android:textSize="18sp"
                        android:textColor="#4A4A4A"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginBottom="10dp">
                <TextView
                        android:text="Условия:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView16" android:textSize="18sp"
                        android:textStyle="bold" android:textColor="#4a4a4a"/>
                <TextView
                        android:text="Тут ненмого информации об условиях работы в нашей организации."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutUsl" android:textColor="#4a4a4a"
                        android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Контактная информация:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView15" android:textColor="#4A4A4A"
                        android:textSize="18sp" android:textStyle="bold"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Номер телефона:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView17" android:textSize="18sp"
                            android:textColor="#4A4A4A"/>
                    <TextView
                            android:text="+79530190297"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/numberPhone"
                            android:layout_toRightOf="@+id/textView17" android:layout_marginLeft="10dp"
                            android:textSize="18sp" android:textColor="#4A4A4A"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Email:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView19" android:textSize="18sp"
                            android:textColor="#4A4A4A"/>
                    <TextView
                            android:text="aleeewww23@mail.ru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/email"
                            android:layout_toRightOf="@+id/textView19" android:layout_marginLeft="10dp"
                            android:textSize="18sp" android:textColor="#4A4A4A"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>