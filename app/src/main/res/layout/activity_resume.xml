<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="20dp" android:background="#ffffffff">
            <TextView
                    android:text="Профессия"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/profession" android:textAllCaps="true"
                    android:textSize="24sp" android:textColor="#4A4A4A" android:textStyle="bold"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/myphoto" android:id="@+id/img"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_toRightOf="@+id/img"
                        android:paddingLeft="20dp"
                        android:paddingRight="10dp">
                    <TextView
                            android:text="Отчество"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/middleName" android:textSize="20sp"
                            android:textColor="#4A4A4A"/>
                    <TextView
                            android:text="Имя"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/lastName" android:textSize="20sp"
                            android:textColor="#4A4A4A"/>
                    <TextView
                            android:text="Фамилия"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/firstName" android:textSize="20sp"
                            android:textColor="#4A4A4A"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <TextView
                        android:text="Обо мне:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView10" android:textColor="#4A4A4A"
                        android:textSize="18sp" android:textStyle="bold"/>
                <TextView
                        android:text="Тут будет немного необходимой информации о моем резюме."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutMe" android:textSize="18sp"
                        android:textColor="#4A4A4A"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Образование:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                            android:textColor="#4A4A4A" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView
                            android:text="среднее"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/education" android:layout_weight="1"
                            android:textColor="#4A4A4A" android:textSize="18sp"
                            android:layout_toRightOf="@+id/textView3"
                            android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView
                        android:text="Тут немного информации о моих учебных заведениях, в которых я обучался"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutEducation"
                        android:textColor="#4A4A4A"
                        android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Опыт работы:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_weight="1"
                            android:textColor="#4A4A4A" android:textSize="18sp" android:textStyle="bold"/>
                    <TextView
                            android:text="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/experience" android:layout_weight="1"
                            android:textAlignment="center" android:textColor="#4A4A4A" android:textSize="18sp"
                            android:layout_toRightOf="@+id/textView5" android:layout_marginLeft="10dp"/>
                    <TextView
                            android:text="Год"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/experienceType"
                            android:layout_weight="1"
                            android:textSize="18sp" android:textColor="#4A4A4A"
                            android:layout_toRightOf="@+id/experience"
                            android:layout_marginLeft="10dp"/>
                </RelativeLayout>
                <TextView
                        android:text="Тут немного информации о моем опыте работы."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/aboutExperience" android:textSize="18sp"
                        android:textColor="#4A4A4A"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Контактная информация:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView15" android:textColor="#4A4A4A"
                        android:textSize="18sp" android:textStyle="bold"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Номер телефона:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView17" android:textSize="18sp"
                            android:textColor="#4A4A4A"/>
                    <TextView
                            android:text="+79530190297"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/numberPhone"
                            android:layout_toRightOf="@+id/textView17" android:layout_marginLeft="10dp"
                            android:textSize="18sp" android:textColor="#4A4A4A"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="Email:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView19" android:textSize="18sp"
                            android:textColor="#4A4A4A"/>
                    <TextView
                            android:text="aleeewww23@mail.ru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/email"
                            android:layout_toRightOf="@+id/textView19" android:layout_marginLeft="10dp"
                            android:textSize="18sp" android:textColor="#4A4A4A"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>