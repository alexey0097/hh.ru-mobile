<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ActivityMain">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@android:color/background_light">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="246dp" app:srcCompat="@drawable/jobs" android:id="@+id/imageView3"
                    android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">
            <TextView
                    android:text="@string/land_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView"
                    android:textSize="30sp" android:gravity="top"
                    android:padding="20dp"
                    android:shadowColor="@android:color/background_light"
                    android:shadowRadius="20" android:textColor="#4A4A4A"
                    android:layout_alignParentTop="true"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center"
                    android:layout_alignParentBottom="false"
                    android:layout_centerInParent="true" android:padding="20dp">
                <Button
                        android:text="@string/button_vacancies"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:id="@+id/buttonVacancy"/>
                <Button
                        android:text="@string/button_resume"
                        android:layout_height="50dp"
                        android:id="@+id/buttonResume"
                        android:layout_width="120dp"/>
            </LinearLayout>
            <Button
                    android:text="Об авторе"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonAuthor"
                    android:layout_alignParentBottom="true" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>